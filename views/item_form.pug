extends layout 

block content 

    h1= title 

    form(method='POST')
        div.form-group
            label(for='name') Name
            input#name.form-control(type='text' placeholder='Type an item name here' required name='name' value=(item===undefined? '' : item.name))
        div.form-group
            label(for='description') Description 
            input#description.form-control(type='text' placeholder='Type an item name here' required name='description' value=(item===undefined? '' : item.description))
        div.form-group
            label Category 
            div 
                for category in categories 
                    div(style='display: inline; padding-right: 10px')
                        if category.checked 
                            input.checkbox-input(type='checkbox' name='category' id=category._id value=category._id checked)
                        else 
                            input.checkbox-input(type='checkbox' name='category' id=category._id value=category._id)
                        label(for=category._id) &nbsp;#{category.name}
        div.form-group
            label(for='price') Price
            input#price.form-control(type='number' placeholder='Whole numbers only' required name='price' value=(item===undefined? '' : item.price))
        div.form-group
            label(for='number_in_stock') Number in stock
            input#number_in_stock.form-control(type='number' placeholder='Whole numbers only' required name='number_in_stock' value=(item===undefined? '' : item.number_in_stock))
        div.form-group
            label(for='hexcode') Hexcode
            input#hexcode.form-control(type='text' placeholder='Please use the #000000 format' required name='hexcode' value=(item===undefined? '' : item.hexcode))
        button.btn.btn-primary(type='submit') Submit
        if errors
            for error in errors 
                p.error-message= error.msg