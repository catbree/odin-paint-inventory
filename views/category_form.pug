extends layout 

block content 

    h1= title

    form(method='POST')
        div.form-group 
            label(for='name') Name
            input#name.form-control(type='text' placeholder='Type a color grouping here' name='name' value=(category===undefined ? '' : category.name))
        button.btn.btn-primary(type='submit') Submit
        if errors
                for error in errors 
                        p.error-message= error.msg

